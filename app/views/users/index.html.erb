<% if notice %>
<p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>
<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/users/new">New User</a>
  </div>
  <h1>Users</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to  user.full_name, user %></td>
      <td class="mail_to">
        <% if user == current_user || user.projects.any? {|project| project.users.include?(current_user) } %>
        <%= user.email %>
        <% end %>
      </td>
      <td class="text-right">
        <% if user == current_user %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-info" %>
          <%= link_to 'Delete', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
