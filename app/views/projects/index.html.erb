<% if notice %>
<p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>
<% if alert %>
<p class="alert alert-danger" id="alert"><%= alert  %></p>
<% end %>
<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/projects/new">New Project</a>
  </div>
  <h1>Projects</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tasks</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= link_to  project.name, project %></td>
      <td><%= link_to  project.tasks.count, project_tasks_path(project) %></td>

    </tr>
    <% end %>
  </tbody>
</table>

<br>
