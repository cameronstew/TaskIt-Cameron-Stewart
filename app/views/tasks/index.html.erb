<% if notice %>
  <p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>
<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-info" href="/tasks/new">New Task</a>
  </div>
  <h1>Tasks</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Due on</th>
    <!--   <th>Complete</th> -->
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, task %></td>
      <td><%= task.due_date %></td>
        <!-- <td><%= task.complete %></td> -->
        <!-- <td><%= link_to 'Show', task %></td> -->
        <td class="text-right">
        <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
        <%= link_to 'Delete', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
