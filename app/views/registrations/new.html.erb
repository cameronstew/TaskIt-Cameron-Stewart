<div class="page-header">
  <h1>Sign up for gCamp!</h1>
</div>
<%= form_for(@user, html: {:class => "form-horizontal"}, url: signup_path) do |f| %>

<%= render partial: "/shared/errors", locals: {object: @user} %>

<div class="form-group">
  <%= f.label :first_name, :class => 'control-label col-md-2' %>
  <div class="col-md-4">
    <%= f.text_field :first_name, :class => 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :last_name, :class => 'control-label col-md-2' %>
  <div class="col-md-4">
    <%= f.text_field :last_name, :class => 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :email, :class => 'control-label col-md-2' %>
  <div class="col-md-4">
    <%= f.email_field :email, :class => 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, :class => 'control-label col-md-2' %>
  <div class="col-md-4">
    <%= f.password_field :password, :class => 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, :class => 'control-label col-md-2' %>
  <div class="col-md-4">
    <%= f.password_field :password_confirmation, :class => 'form-control' %>
  </div>
</div>


<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
</div>

<% end %>
