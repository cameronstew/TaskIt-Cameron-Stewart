
<div class="col-md-offset-3">
  <div class="col-md-6">
    <div class="well">
      <h1>Sign into gCamp</h1>

      <%= form_tag '/login',  class: 'form-horizontal'  %>
        <% if @sign_in_error %>
          <div id="error_explanation" class="sign-up-error">
            <%= @sign_in_error %>
          </div>
        <% end %>
        <div class="form-group">
            <%= label_tag :email, nil, :class => 'control-label' %>
            <%= text_field_tag :email, nil, :class => 'form-control' %>
        </div>
        <div class="form-group">
            <%= label_tag :password, nil, :class => 'control-label' %>

            <%= password_field_tag :password, nil, :class => 'form-control' %>

        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-4">
              <%= submit_tag 'Sign In', :class => "btn btn-primary" %>
          </div>
        </div>
    </div>
  </div>
</div>
