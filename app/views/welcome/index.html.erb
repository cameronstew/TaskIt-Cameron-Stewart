<html>
<!-- Main jumbotron for a primary marketing message or call to action -->
<% if notice %>
  <p class="alert alert-success" id="notice"><%= notice  %></p>
<% end %>

<div class="jumbotron">
  <div class="container">
    <h1>TaskIt</h1>
    <p>Your life, organized.</p>
  </div>
</div>

<!-- Example row of columns -->
<div class="row">
  <div class="col-md-4">
    <p class="lead">
      <img alt="Panel1" class="img-responsive" <%= image_tag('dude.jpg') %>
    </p>
    <div class="panel panel-primary">
      <div class="panel-heading">Tasks</div>
      <div class="panel-body home-panel">
        <p>Grouped by projects and lists, just the way you like'em</p>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <p class="lead">
      <img alt="Panel2" class="img-responsive" <%= image_tag('pen.jpg') %>
    </p>
    <div class="panel panel-primary">
      <div class="panel-heading">Documents</div>
      <div class="panel-body home-panel">
        <ul>
          <li>Upload</li>
          <li>Comment</li>
          <li>Revise</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <p class="lead">
      <img alt="Panel3" class="img-responsive" <%= image_tag('headphones_dude.jpg') %>
    </p>
    <div class="panel panel-primary">
      <div class="panel-heading">Comments</div>
      <div class="panel-body home-panel">
        <ul>
          <li>Comment on tasks and documents</li>
          <li>Get email notifications</li>
        </ul>
      </div>
    </div>
  </div>
</div>



<% @quotes.each do |name, quote| %>
  <p>"<%= quote %>"</p>
  <p class="text-muted"><em>â€” <%= name %></em></p>
<% end %>


</html>
